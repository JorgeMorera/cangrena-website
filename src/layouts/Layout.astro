---
interface Props {
	title: string;
}

const { title } = Astro.props;

import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import  Cangrena  from '../assets/cangrena_logo_plata.png';
import Puas from '../assets/puas2.png';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gray-950 grid grid-cols-12 gap-4">

		<div class="col-span-12 row-span-12 justify-self-center">
			<div class="flex bg-repeat">
				<Image src={Puas} alt="puas" width="300" height="300"/> <Image src={Puas} alt="puas" width="300" height="300"/><Image src={Puas} alt="puas" width="300" height="300"/> <Image src={Puas} alt="puas" width="280" height="300"/>
			</div>
			<div class="flex justify-center items-center">
				<Image src={Cangrena} alt="Logo Cangrena" width="500"/>
			</div>
			<div class="flex bg-repeat">
				<Image src={Puas} alt="puas" width="300" height="300"/> <Image src={Puas} alt="puas" width="300" height="300"/><Image src={Puas} alt="puas" width="300" height="300"/> <Image src={Puas} alt="puas" width="280" height="300"/>
			</div>
		</div>
		
		<div class="col-span-1">
			<Navbar />
		</div>
		<div class="col-span-10">
			<slot />
		</div>
		<div class="col-span-12 row-span-12 justify-self-center ">
			<div>
				<Footer />
			</div>
		</div>
	</body>
</html>

	